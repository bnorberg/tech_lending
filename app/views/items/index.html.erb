<% @items.each do |item| %>
<div id="item_checkout" style='width: 1750px; height: 700px;'>
	<script type="text/javascript" charset="utf-8">
	  $(function () {
	    new Highcharts.Chart({
		    chart: { renderTo: 'item_checkout' },
		    title: { text: 'Checkouts over Time' },
		    xAxis: { type: 'datetime' },
		    yAxis: {
			  min: 0,
			  tickInterval: 1,
		      title: { text: 'Checkouts'}
		    },
		    series: [{
			  	name: 'Checkouts',
				pointInterval: 24 * 3600 * 1000,
				pointStart: Date.UTC(<%= item.checkouts.first.date.to_time.to_s.split(' ')[0].gsub('-', ', ' ) %>),
		      	data: <%= (item.checkouts.first.date..item.checkouts.last.date).map { |date| item.checkouts.where(:date => date).count}.inspect %>
		    }]
		  });
		});
	</script>
	
</div>
<div id='status_chart' style='width: 1750px; height: 700px;'>
	<script type='text/javascript' charset='utf-8'>
	$(function () {
	    new Highcharts.Chart({
	            chart: {
	                renderTo: 'status_chart',
	                type: 'column',
	                margin: [ 50, 50, 100, 80]
	            },
	            title: {
	                text: 'Checkouts By Status'
	            },
	            xAxis: {
	                categories: ['3CED', '4ROTECT', 'C', 'DIST', 'FACSOUS', 'FACULTY', 'FACULTY-POSTDOC', 'FR', 'FSU', 'GNCSU-SR', 'GRAD', 'GRAD-NCSU-DIST', 'HFACULTY', 'HNOAY', 'HRAD', 'HSTAFF', 'HUNDERRAD', 'HVISNOAY', 'INDIVD', 'JR', 'NCSU-DIST', 'NCSU-DIST-FR', 'NCSU-DIST-JR', 'NCSU-DIST-SO', 'NCSU-DIST-SR', 'NCSUSTAFF', 'NOAY', 'RISD', 'SCUG', 'SHAW', 'SO', 'SR', 'STAFF', 'STEORE', 'TM', 'TRLN', 'Test Circ', 'UNCSYS', 'UNDERGRAD', 'UNDRGRAD', 'UNIVAFFIL', 'UZ1/3/50321', 'UZ2/26/50349', 'UZ6/6/1990', 'VISNOAY'],
	                labels: {
	                    rotation: -45,
	                    align: 'right',
	                    style: {
	                        fontSize: '13px',
	                        fontFamily: 'Verdana, sans-serif'
	                    }
	                }
	            },
	            yAxis: {
	                min: 0,
	                title: {
	                    text: 'Number of Checkouts'
	                }
	            },
	            legend: {
	                enabled: false
	            },
	            tooltip: {
	                formatter: function() {
	                    return '<b>'+ this.x +'</b><br/>'+
	                        'Checkouts: '+ Highcharts.numberFormat(this.y, 0);
	                }
	            },
	            series: [{
	                name: 'Status',
	                data:  <%= ['3CED', '4ROTECT', 'C', 'DIST', 'FACSOUS', 'FACULTY', 'FACULTY-POSTDOC', 'FR', 'FSU', 'GNCSU-SR', 'GRAD', 'GRAD-NCSU-DIST', 'HFACULTY', 'HNOAY', 'HRAD', 'HSTAFF', 'HUNDERRAD', 'HVISNOAY', 		'INDIVD', 'JR', 'NCSU-DIST', 'NCSU-DIST-FR', 'NCSU-DIST-JR', 'NCSU-DIST-SO', 'NCSU-DIST-SR', 'NCSUSTAFF', 'NOAY', 'RISD', 'SCUG', 'SHAW', 'SO', 'SR', 'STAFF', 'STEORE', 'TM', 'TRLN', 'Test Circ', 'UNCSYS', 'UNDERGRAD', 'UNDRGRAD', 'UNIVAFFIL', 'UZ1/3/50321', 'UZ2/26/50349', 'UZ6/6/1990', 'VISNOAY'].map { |status| item.checkouts.where(:patron_status =>status).count}.inspect %>,
	                dataLabels: {
	                    enabled: true,
	                    rotation: -90,
	                    color: '#FFFFFF',
	                    align: 'right',
	                    x: 4,
	                    y: 10,
	                    style: {
	                        fontSize: '13px',
	                        fontFamily: 'Verdana, sans-serif'
	                    }
	                }
	            }]
	        });
	    });
	
	</script>
<table id="main">
  <tr>
    <th>Item</th>
	<th>Call Number</th>
    <th>Location</th>
  </tr>	
  <tr class="<%= cycle("even", "odd") %>">
    <td><%= item.call_number.sub("IQ", "") %></td>
	<td><%= item.call_number %></td>
    <td><%= item.location.sub("UM", "") %></td>
    <% if !item.checkouts.empty? %>
	  <tr>
	    <td class="record_link"><a href="#record">Checkouts: <%= item.checkouts.count %></a>
	   	<br/>
	    <%= item.checkouts.first.date %>-<%= item.checkouts.last.date %>
	 	</td>
	  </tr>    
	  <tr id="<%= item.id.to_s %>" style="display: none">
      	<td class="new_table">
	    	<table>
		    	<tr>
			    	<th>Checkout Date</th>
					<th>Start Time</th>
					<th>End Time</th>
					<th>Patron Status</th>
					<th>Patron College</th>
					<th>Renewals</th>
					<th>Duration</th>
			    </tr>  
			    <% item.checkouts.each do |co| %> 
			    	<tr>
				    	<td><%= co.date %></td>
					    <td><%= co.start_time.strftime("%I:%M%p") %></td>
						<% if !co.end_time.nil? %>
				        	<td><%= co.end_time.strftime("%I:%M%p") %></td>
						<% else %>
							<td><%= co.end_time %></td>
						<% end %>	
				        <td><%= co.patron_status %></td>
				        <td><%= co.patron_college %></td>
				        <td><%= co.renewals %></td>
				        <td><%= co.duration %></td>
			      	</tr>
	     		<% end %>
	   		</table>
		</td>
	  </tr> 
	  <% end %>
  </tr>
<% end %>
</table>
</div>
<% end %>
